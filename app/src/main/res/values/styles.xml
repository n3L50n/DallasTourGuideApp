<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LocationTitleStyle">
        <item name="android:layout_margin">@dimen/title_padding</item>
        <item name="android:textSize">@dimen/location_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_above">@id/tour_location_description</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LocationDescriptionStyle">
        <item name="android:layout_margin">@dimen/desc_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/location_description_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LocationImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_marginBottom">@dimen/image_margin_bottom</item>
    </style>

</resources>
